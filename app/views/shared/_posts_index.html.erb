<div class="row">
    <div class="col-lg-12">
        <h2>投稿一覧</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>タイトル</th>
                    <th>本文</th>
                </tr>
            </thead>
            <tbody>
                <% @posts.each do |post| %>
                <tr>
                    <td><%= post.title %></td>
                    <td><%= post.body %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>