<div class="row">
  <div class="col-lg-2"></div>
  <div class="col-lg-8">
    <h2>質問フォーム</h2>
  <%= form_with model:@question, local: true do |f| %>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
    <%= f.label :body %><br>
    <%= f.text_area :body %><br>
    <%= f.label :question_image %><br>
    <%= f.attachment_field :question_image %><br>
    <%= f.submit "質問する" %>
  <% end %>
  </div>
  <div class="col-lg-2"></div>
</div>