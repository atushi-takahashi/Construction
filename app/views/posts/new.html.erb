<div class="row">
  <div class="col-lg-2"></div>
  <div class="col-lg-8">
    <h2>投稿フォーム</h2>
  <%= form_with model:@post, local: true do |f| %>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
    <%= f.label :body %><br>
    <%= f.text_area :body %><br>
    <%= f.label :post_image %><br>
    <%= f.attachment_field :post_image %><br>
    <%= f.submit "投稿する" %>
  <% end %>
  </div>
  <div class="col-lg-2"></div>
</div>